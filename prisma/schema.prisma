generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  name             String?
  email            String    @unique
  picture          String?
  sub              String
  contacts         Contact[] @relation("UserContacts")
  messagesSent     Message[] @relation("Sender")
  messagesReceived Message[] @relation("Receiver")
  Contact          Contact[]
}

model Contact {
  id        Int    @id @default(autoincrement())
  ownerId   Int
  contactId Int

  owner   User @relation("UserContacts", fields: [ownerId], references: [id])
  contact User @relation(fields: [contactId], references: [id])
}

model Message {
  id        Int      @id @default(autoincrement())
  fromId    Int
  toId      Int
  content   String
  createdAt DateTime @default(now())

  sender   User @relation("Sender", fields: [fromId], references: [id])
  receiver User @relation("Receiver", fields: [toId], references: [id])
}
